{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "buildscripts/build.sh",
    
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "echo": true,
                "focus": false,
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm -rf bin",
    
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "echo": true,
                "focus": false,
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "dependsOn": ["Clean", "Build"],
            "dependsOrder": "sequence",
    
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "echo": true,
                "focus": false,
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
        }
    ]
}